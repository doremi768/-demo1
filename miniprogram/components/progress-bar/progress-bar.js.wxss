.container{
  display: flex;
  align-items: center;
}

.control{
  position: relative;
  flex: 1;
  /* height: 18rpx; */
}

.movable-area{
  width: 100%;
  height: 44rpx;
  position: absolute;
  bottom: -30rpx;
  left: 0;
}

.movable-view{
  width: 36rpx;
  height: 36rpx;
  background: #fefefe;
  border-radius: 50%;
}
.proGress{
  margin-top: 11rpx;
}
.time{
  width: 64rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  font-family: sans-serif;
  font-weight: 400;
  color: rgba(255,255,255,1);
  line-height: 30rpx;
}