/* components/playlist/playlist.wxss */
.playlist-container {
  position: relative;
  width: 220rpx;
  padding-bottom: 20rpx;
}

.playlist-img {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}

.playlist-playcount {
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1px 0 0 rgba(0, 0, 0, .2);
  position: absolute;
  right: 10rpx;
  top: 4rpx;
  padding-left: 26rpx;
}

.playlist-name {
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  font-size: 12px;
  -webkit-line-clamp: 2;
  /* white-space: nowrap; */
  overflow: hidden;
  text-overflow: ellipsis;
}