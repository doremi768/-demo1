/* components/bottom-modal/bottom-modal.wxss */
.modal{
  position: fixed;
  top: 0;
  right: 0; 
  bottom: 0;
  left: 0;
  text-align: center;
  z-index: 99;
  background: rgba(0,0,0,.5);
}


.panel{
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 300rpx;
  box-sizing: border-box;
  background: #f9f9f9;
}

.icon-cuowu{
  position: absolute;
  color: #000000;
  right: 10rpx;
  top: 10rpx;
  width: 40rpx;
  padding: 20rpx;
}