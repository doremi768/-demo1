/* pages/blog-edit/blog-edit.wxss */
.container{
  padding: 20rpx;
}

.content{
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

.footer{
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  padding: 15rpx;
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  background: #f1f1f1;
}

.words-num{
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}

.send-btn{
  margin-right: 20rpx;
  width: 145rpx;
  height: 100%;
  background: #d43c33;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  font-weight: 600;
  font-size: 28rpx;
  box-sizing: border-box;
}

.icon-zengjia{
  font-size: 30rpx;
  color: #999;
}

.image-list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image-wrap{
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  border: 1px dashed #ccc;
  line-height: 220rpx;
  text-align: center;
}

.image{
  width: 100%;
  height: 100%;
}

.icon-del{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
  font-weight: bolder;
}